---
import Hero from '../react/hero'
import Screenshot from '../react/screenshot'

const data = await Astro.glob('../../pages/projects/*.mdx')
const featured = data.filter((d) => d.frontmatter.featured)[0]
const { link } = featured.frontmatter
const { url } = featured
---

<Hero>
  <Screenshot image={link} link={url} client:idle />
</Hero>
