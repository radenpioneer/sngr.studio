---
import BaseLayout from './base.astro'
import PagesHeader from '~/components/pages/header'
import { SEO } from 'astro-seo'
import site from '~/components/site/site'

const { frontmatter: page } = Astro.props
---

<BaseLayout theme={page.theme}>
  <SEO
    title={`${page.title} \u2014 ${site.name}`}
    description={site.description}
    slot="head"
  />

  <article class="__article">
    <PagesHeader title={page.title} slogan={page.slogan} />
    <section class="prose md:prose-lg xl:prose-xl mx-auto">
      <slot />
    </section>
  </article>
</BaseLayout>

<style lang="scss">
  .__article {
    @apply px-4 pb-16;
  }
</style>
