---
import BaseLayout from './base.astro'
import Image from '~/components/site/image.astro'
import { SEO } from 'astro-seo'

const { frontmatter: fm } = Astro.props
---

<BaseLayout>
  <SEO title={fm.title} slot="head" />
  <section>
    <article class="prose prose-xl max-w-none">
      <h1>{fm.title}</h1>
      {
        fm.image && (
          <div class="no-prose __imgbox">
            <Image src={fm.image} alt={fm.title} eager={true} />
          </div>
        )
      }
      <slot />
    </article>
  </section>
</BaseLayout>

<style lang="scss">
  @use '../styles/fonts';

  section {
    @apply max-w-screen-md px-4 mt-16 mb-12 mx-auto;
  }

  h1 {
    @extend %heading;
  }

  .__date {
    @apply uppercase;
  }

  .__imgbox img {
    @apply rounded-lg;
  }
</style>
